<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/mini_gray"
    android:orientation="vertical"
    android:paddingVertical="20sp"
    app:layout_collapseMode="parallax">

    <TextView
        android:id="@+id/Header"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:fontFamily="sans-serif-black"
        android:paddingHorizontal="20sp"
        android:text="Раздел _"
        android:textColor="#3330A5"
        android:textSize="28sp"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="110sp"
        android:layout_marginTop="0dp"
        android:fadeScrollbars="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10">

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:gravity="top|left"
                android:outlineAmbientShadowColor="#000000"
                android:outlineSpotShadowColor="#000000"
                android:shadowColor="#539600"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="20"
                android:text="СВОБОДНЫЕ АУДИТОРИИ"
                android:textAlignment="center"
                android:textColor="#539600"
                android:textSize="11sp"
                android:textStyle="normal"
                app:cornerRadius="25dp"
                app:rippleColor="@color/black"
                app:strokeColor="#539600"
                app:strokeWidth="3sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="62dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="6dp"
                android:outlineAmbientShadowColor="#C12727"
                android:outlineSpotShadowColor="#9A1C1C"
                android:scaleType="centerCrop"
                app:srcCompat="@mipmap/open_classes" />

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="14.8">

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10">

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:gravity="top|left"
                android:outlineAmbientShadowColor="#000000"
                android:outlineSpotShadowColor="#000000"
                android:shadowColor="#8D0039"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="20"
                android:text="ПОМОЩЬ СТУДЕНТАМ"
                android:textAlignment="center"
                android:textColor="#8D0039"
                android:textSize="11sp"
                android:textStyle="normal"
                app:cornerRadius="25dp"
                app:rippleColor="@color/black"
                app:strokeColor="#8D0039"
                app:strokeWidth="3sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="62dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="6dp"
                android:scaleType="centerCrop"
                app:srcCompat="@mipmap/hand_shake__foreground" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="14.8">

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10">

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:gravity="top|left"
                android:outlineAmbientShadowColor="#000000"
                android:outlineSpotShadowColor="#000000"
                android:shadowColor="#0F4FA7"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="20"
                android:text="ОБРАТНАЯ СВЯЗЬ"
                android:textAlignment="center"
                android:textColor="#0F4FA7"
                android:textSize="11sp"
                android:textStyle="normal"
                app:cornerRadius="25dp"
                app:rippleColor="@color/black"
                app:strokeColor="#0F4FA7"
                app:strokeWidth="3sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="62dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="6dp"
                android:scaleType="centerCrop"
                app:srcCompat="@mipmap/feedback_foreground" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="110sp"
        android:layout_marginTop="0dp"
        android:fadeScrollbars="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10">

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:gravity="top|left"
                android:outlineAmbientShadowColor="#000000"
                android:outlineSpotShadowColor="#000000"
                android:shadowColor="#99140D"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="20"
                android:text="СОБЫТИЯ"
                android:textAlignment="center"
                android:textColor="#99140D"
                android:textSize="11sp"
                android:textStyle="normal"
                app:cornerRadius="25dp"
                app:rippleColor="@color/black"
                app:strokeColor="#99140D"
                app:strokeWidth="3sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="62dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="6dp"
                android:scaleType="centerCrop"
                app:srcCompat="@mipmap/calendar_foreground" />

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="14.8">

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10">

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:gravity="top|left"
                android:outlineAmbientShadowColor="#000000"
                android:outlineSpotShadowColor="#000000"
                android:shadowColor="#5C26A0"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="20"
                android:text="ПОРТФОЛИО"
                android:textAlignment="center"
                android:textColor="#5C26A0"
                android:textSize="11sp"
                android:textStyle="normal"
                app:cornerRadius="25dp"
                app:rippleColor="@color/black"
                app:strokeColor="#5C26A0"
                app:strokeWidth="3sp" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="62dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="6dp"
                android:scaleType="centerCrop"
                app:srcCompat="@mipmap/briefcase_foreground" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="14.8">

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10">

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:gravity="top|left"
                android:outlineAmbientShadowColor="#000000"
                android:outlineSpotShadowColor="#000000"
                android:shadowColor="#FE9F00"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="20"
                android:text="FAQ + QA"
                android:textAlignment="center"
                android:textColor="#FE9F00"
                android:textSize="11sp"
                android:textStyle="normal"
                app:cornerRadius="25dp"
                app:rippleColor="@color/black"
                app:strokeColor="#FE9F00"
                app:strokeWidth="3sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="62dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="6dp"
                android:scaleType="centerCrop"
                app:srcCompat="@mipmap/interrogation_foreground" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>